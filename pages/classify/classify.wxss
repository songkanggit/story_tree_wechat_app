.scrollbox {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  overflow: auto;
}

.list-box {
  width: 750rpx;
  margin: 10rpx auto;
}

.list {
  width: 370rpx;
  margin-right: 10rpx;
  float: left;
}

.list:nth-child(2n) {
  margin-right: 0rpx;
}

.list-img {
  width: 100%;
  height: 370rpx;
  overflow: hidden;
  border-radius: 6rpx;
  box-shadow: 0rpx 0rpx 20rpx 3rpx #e1e1e1;
  position: relative;
}

.list-img image {
  width: 98%;
  height: 98%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto auto;
}

.list-text {
  width: 100%;
  height: 86rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  text-indent: 20rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
