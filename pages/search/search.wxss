.search {
  width: 710rpx;
  margin: 0rpx auto;
  overflow: hidden;
}

.title {
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  text-indent: 56rpx;
  color: #333;
  position: relative;
}

.title .icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  margin: auto auto;
}

.icon image {
  width: 100%;
  height: 100%;
  display: inherit;
}

.listbox {
  width: 100%;
  overflow: hidden;
  border-bottom: 2rpx solid #e1e1e1;
}

.search:last-child .listbox {
  border: none;
}

.list {
  width: auto;
  height: 58rpx;
  font-size: 28rpx;
  line-height: 58rpx;
  text-align: center;
  color: #333;
  border: 1rpx solid #e1e1e1;
  border-radius: 29rpx;
  padding: 0rpx 30rpx;
  float: left;
  margin: 0rpx 20rpx 20rpx 0rpx;
}

.selected {
  background: #ff1f43;
  color: #fff;
}
